{
  "properties": {
    "spawn_latitude": "number",
    "spawn_longitude": "number",
    "enable_decoration": "boolean",
    "world_scale": "number",
    "height_scale": "number",
    "noise_scale": "number",
    "height_origin": "number",
    "scatter_range": "number",
    "beach_size": "number",
    "enable_buildings": "boolean",
    "enable_streets": "boolean",
    "enable_vanilla_features": "boolean",
    "enable_cave_generation": "boolean",
    "enable_resource_generation": "boolean"
  },
  "categories": {
    "world": {
      "widgets": [
        {
          "type": "terrarium:slider",
          "property": "world_scale",
          "range": [1.0, 200.0],
          "step": [5.0, 1.0],
          "value_converter": {"type": "terrarium:inverse_converter"}
        },
        {"type": "terrarium:slider", "property": "height_scale", "range": [0.0, 10.0], "step": [0.5, 0.1]},
        {"type": "terrarium:slider", "property": "noise_scale", "range": [0.0, 3.0], "step": [0.5, 0.1]},
        {"type": "terrarium:slider", "property": "scatter_range", "range": [0, 32], "step": [1, 1]},
        {"type": "terrarium:slider", "property": "height_origin", "range": [0, 256], "step": [1, 1]},
        {"type": "terrarium:slider", "property": "beach_size", "range": [0, 8], "step": [1, 1]}
      ]
    },
    "features": {
      "widgets": [
        {"type": "terrarium:toggle", "property": "enable_decoration"},
        {"type": "terrarium:toggle", "property": "enable_buildings"},
        {"type": "terrarium:toggle", "property": "enable_streets"},
        {"type": "terrarium:toggle", "property": "enable_vanilla_features"},
        {"type": "terrarium:toggle", "property": "enable_cave_generation"},
        {"type": "terrarium:toggle", "property": "enable_resource_generation"}
      ]
    }
  }
}
